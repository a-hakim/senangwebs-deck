{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-plusplus": "off",
    "no-param-reassign": ["error", { "props": false }],
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "import/extensions": ["error", "always", {
      "js": "always"
    }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}
