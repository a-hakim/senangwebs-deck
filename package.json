{
  "name": "@senangwebs/deck",
  "version": "1.0.0",
  "description": "A modern, lightweight JavaScript library for creating beautiful web-based presentations with multiple input formats (HTML, Markdown, JSON)",
  "main": "dist/swd.js",
  "module": "dist/swd.esm.js",
  "style": "dist/swd.css",
  "scripts": {
    "dev": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css}\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "presentation",
    "slides",
    "deck",
    "markdown",
    "html",
    "json",
    "reveal",
    "slideshow"
  ],
  "author": "SenangWebs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/senangwebs/deck.git"
  },
  "bugs": {
    "url": "https://github.com/senangwebs/deck/issues"
  },
  "homepage": "https://github.com/senangwebs/deck#readme",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mini-css-extract-plugin": "^2.9.4",
    "prettier": "^3.6.2",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "core-js": "^3.46.0",
    "dompurify": "^3.3.0",
    "marked": "^15.0.12",
    "prismjs": "^1.30.0"
  }
}
